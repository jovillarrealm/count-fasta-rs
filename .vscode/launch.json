    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rs-count-fasta'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rs-count-fasta",
                    "--package=rs-count-fasta"
                ],
                "filter": {
                    "name": "rs-count-fasta",
                    "kind": "bin"
                }
            },
            "args": [ "-c", "data.csv", "../GENOMIC/GCF_016906185_Streptomyces-californicus_FDAARGOS1209.fna"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rs-count-fasta' no csv",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rs-count-fasta",
                    "--package=rs-count-fasta"
                ],
                "filter": {
                    "name": "rs-count-fasta",
                    "kind": "bin"
                }
            },
            "args": ["../GENOMIC/GCF_016906185_Streptomyces-californicus_FDAARGOS1209.fna"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rs-count-fasta'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rs-count-fasta",
                    "--package=rs-count-fasta"
                ],
                "filter": {
                    "name": "rs-count-fasta",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}